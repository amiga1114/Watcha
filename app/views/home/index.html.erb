<main role="main">

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">WATCHA</h1>
    <p class="lead text-muted">영화평점 사이트 왓챠!!</p>
    <p>
      <a href="/posts" class="btn btn-primary">게시판</a>
      <a href="#" class="btn btn-secondary">Secondary action</a>
    </p>
  </div>
</section>

<div class="album text-muted">
  <div class="container">

    <div class="row">
      <% @movies.each do |movie| %>
      <div class="card">
        <img src="<%= movie.poster %>" width="100%" height="280px" alt="Card image cap">
        <a class="card-text" href="/home/show/<%= movie.id %>"><%= movie.title %></a>
        <p class="card-text">
          <%= movie.title %>
          <%= movie.nation %>
          <%= movie.genre %>
          <%= movie.director %>
        </p>
      </div>
    <% end %>
    </div>

  </div>
</div>

</main>
