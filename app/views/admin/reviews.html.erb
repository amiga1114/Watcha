<div class="container-fluid">
      <div class="row">
        <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
          <ul class="nav nav-pills flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="#">관리자 홈페이지 <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">유저관리</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">게시판관리</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">리뷰관리</a>
            </li>
          </ul>
        </nav>

        <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
          <h1>관리자 페이지</h1>
          <h2>리뷰 현황</h2>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>영화</th>
                  <th>글쓴이</th>
                  <th>평점</th>
                  <th>리뷰</th>
                  <th>삭제</th>
                </tr>
              </thead>
              <tbody>
              <% @reviews.each do |review| %>
                <tr>
                  <td><%= review.id %></td>
                  <td><%= review.movie.title %></td>
                  <td><img src="<%= review.movie.poster.thumb %>"></td>
                  <td><%= review.rating %></td>
                  <td><%= review.comment %></td>
                  <td>
                    <%= link_to "삭제", "/admin/reviews_destroy/#{review.id}", method: :delete, data: {confirm: "정말삭제?"} %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>
