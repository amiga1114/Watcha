<div class="container-fluid">
      <div class="row">
        <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
          <ul class="nav nav-pills flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="#">관리자 홈페이지 <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">유저관리</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">게시판관리</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">리뷰관리</a>
            </li>
          </ul>
        </nav>

        <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
          <h1>관리자 페이지</h1>
          <h2>게시글 현황</h2>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>#</th>
                  <th>제목</th>
                  <th>내용</th>
                  <th>글쓴이</th>
                  <th>그림</th>
                  <th>삭제</th>
                </tr>
              </thead>
              <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= post.id %></td>
                  <td><%= post.title %></td>
                  <td><%= post.content %></td>
                  <td><%= post.user.nickname %></td>
                  <td><img src="<%= post.image.thumb %>"></td>
                  <td>
                    <%= link_to "삭제", "/admin/posts_destroy/#{post.id}", method: :delete, data: {confirm: "정말삭제?"} %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>
